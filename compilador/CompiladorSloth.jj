void For():
{Token a,b,c,d,e,f,g;}/*
<FOR><ABREPAR>NomeVar()<IGUALDADE>
(ValorVar()|NomeVar())<SEPFOR>
(ValorVar()|NomeVar())<SEPFOR>
(ValorVar()|NomeVar())<FECHAPAR>Bloco()
*/
{
	(a=<FOR>){cod.add(a);}
	(b=<ABREPAR>){cod.add(b);}

	(f=<TIPOINT>){cod.add(f);}
	(g=<NOMEVAR>){cod.add(g);cod.addDVarList(g.image,f.kind);}
	Atribuicao(f.kind)

	(d=<SEPFOR>){cod.add(d);cod.openExpressao(9);}
	Expressao(){cod.closeExpressao();}

	(d=<SEPFOR>){cod.add(d);cod.openExpressao(9);}
	Expressao(){cod.closeExpressao();}
	(e=<FECHAPAR>){cod.add(e);}
	Bloco()
}

