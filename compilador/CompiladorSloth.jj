	|(a=<MAIOR>){cod.add(a);}
	|(a=<MENOR>){cod.add(a);})
	{return a;}
	
}

Token ValorVar():
{Token a;} // <INTEIRO>|<REAL>|<CARACTER>|Booleano()|<PORCENTAGEM>|<STRING>
