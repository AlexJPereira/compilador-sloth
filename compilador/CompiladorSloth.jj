	(a = <SUB>){cod.add(a);}|
	(a = <MOD>){cod.add(a);}|
	(a = <DIV>){cod.add(a);}|
	(a = <POW>){cod.add(a);}|
	(a = <MULT>){cod.add(a);})
	{return a;}
}

